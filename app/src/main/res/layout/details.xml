<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Details">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:drawableStart="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/orderNumberDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/statusChangingButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"

        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toDelivered"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/add_new_button"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_marginHorizontal="30dp"
            android:text="@string/change_to_delevered" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toCancelled"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/add_new_button"
            android:textColor="@color/white"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:layout_marginHorizontal="30dp"
            android:text="@string/change_to_cancelled" />
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.constraintlayout.widget.ConstraintLayout>