<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.homeworkstbc.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >

    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.homeworkstbc.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_home2"
            app:destination="@id/home2"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/home2"
        android:name="com.example.homeworkstbc.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/home2"
            app:popUpToInclusive="true"/>

    </fragment>

</navigation>